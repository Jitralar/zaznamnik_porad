<Window x:Class="aplikace_zaznamnik_porad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Meeting App" Height="400" Width="600">
    <Grid>
        <ComboBox ItemsSource="{Binding ZobrazeniMoznosti}"
                  SelectedItem="{Binding VybraneZobrazeni, Mode=TwoWay}"
                  Margin="10" Height="30" VerticalAlignment="Top" />

        <ListView ItemsSource="{Binding ZobrazenáData}" Margin="10,50,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                    <GridViewColumn Header="Jméno" DisplayMemberBinding="{Binding Jmeno}" Width="150"/>
                    <GridViewColumn Header="Příjmení" DisplayMemberBinding="{Binding Prijmeni}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
