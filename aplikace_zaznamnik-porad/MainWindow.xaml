<Window x:Class="aplikace_zaznamnik_porad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:aplikace_zaznamnik_porad"
        xmlns:localdb="clr-namespace:aplikace_zaznamnik_porad.databaze"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- ComboBox pro výběr porady -->
        <ComboBox x:Name="ComboBoxPorady" 
                  ItemsSource="{Binding SeznamPorad}" 
                  DisplayMemberPath="Lokace" 
                  SelectedItem="{Binding VybranaPorada}" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,10,0,0"/>

        <!-- ListBox pro výběr účastníků -->
        <ListBox x:Name="ListBoxUcastnici" 
                 SelectionMode="Multiple" 
                 HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,46,0,0" Height="171">

            <!--<ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Check}"/>
                        <TextBlock Text="{Binding Jmeno}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>-->

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Check}"></CheckBox>
                        <TextBlock Text="{Binding Jmeno}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- ComboBox pro zobrazení -->
        <ComboBox x:Name="ComboBoxZobrazeni" 
          ItemsSource="{Binding ZobrazeniMoznosti}" 
          SelectedItem="{Binding VybraneZobrazeni}" 
          HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,235,0,0"/>


        <!-- ListView --><!--
        <ListView x:Name="ListViewData" 
                  ItemsSource="{Binding ZobrazenáData}" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="220,10,10,50"/>-->

        <ListView x:Name="ListViewData" 
          ItemsSource="{Binding ZobrazenáData}" 
          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="220,10,10,50">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Jmeno}" Margin="5"/>
                        <TextBlock Text="{Binding Prijmeni}" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10">
            <Button Content="Add" Command="{Binding AddCommand}" Width="75" Margin="0,0,10,0"/>
            <Button Content="Edit" Command="{Binding EditCommand}" Width="75" Margin="0,0,10,0"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}" Width="75"/>
        </StackPanel>
    </Grid>
</Window>
