<Window x:Class="MeetingApp.Okno1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bod Jednání" Height="450" Width="800">
	<Grid>
		<StackPanel>
			<TextBox Text="{Binding CurrentBod.Nazev}" />
			<Button Content="Next" Command="{Binding NextCommand}" />
			<Button Content="Previous" Command="{Binding PreviousCommand}" />
			<Button Content="Hlasovat" Command="{Binding OpenVoteWindowCommand}" />
			<Button Content="Informace" Command="{Binding OpenInfoWindowCommand}" />
			<Button Content="Konec" Command="{Binding SaveAndExitCommand}" />
		</StackPanel>
	</Grid>
</Window>
